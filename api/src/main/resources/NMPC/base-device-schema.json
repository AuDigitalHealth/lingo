{
  "type": "object",
  "$defs": {
    "SnowstormConceptMini": {
      "type": "object",
      "properties": {
        "conceptId": {
          "type": "string"
        },
        "pt": {
          "$ref": "#/$defs/SnowstormTermLangPojo"
        }
      },
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Field must be populated."
      }
    },
    "SnowstormTermLangPojo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lang": {
          "type": "string"
        },
        "term": {
          "type": "string"
        }
      }
    },
    "Quantity": {
      "type": "object",
      "properties": {
        "unit": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "value": {
          "type": "number",
          "minimum": 0
        }
      },
      "minProperties": 2,
      "errorMessage": {
        "minProperties": "Both 'unit' and 'value' must be provided."
      },
      "dependencies": {
        "unit": {
          "oneOf": [
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "const": "732935002"
                    }
                  }
                },
                "value": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": ["value"]
            },
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "not": {
                        "const": "732935002"
                      }
                    }
                  }
                }
              }
            }
          ],
          "errorMessage": {
            "oneOf": "Must be an integer â‰¥ 1 when 'unit' is 'Each'"
          }
        }
      }
    },
    "DeviceAndSpecificDeviceType": {
      "type": "object",
      "properties": {
        "deviceType": {
          "anyOf": [
            {
              "$ref": "#/$defs/SnowstormConceptMini"
            },
            {
              "type": "null"
            }
          ],
          "title": "Device Type"
        },
        "specificDeviceType": {
          "anyOf": [
            {
              "$ref": "#/$defs/SnowstormConceptMini"
            },
            {
              "type": "null"
            }
          ],
          "title": "Specific Device Type"
        }
      },
      "title": "Device and Specific device type"
    },
    "ProductDetails": {
      "type": "object",
      "title": "Product Details",
      "properties": {
        "productName": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Product Name",
          "minProperties": 1,
          "errorMessage": {
            "minProperties": "Product Name must be populated."
          }
        },

        "deviceAndSpecificDeviceType": {
          "$ref": "#/$defs/DeviceAndSpecificDeviceType"
        },
        "otherIdentifyingInformation": {
          "type": "string",
          "title": "Other Identifying Information"
        },
        "packSize": {
          "$ref": "#/$defs/Quantity",
          "title": "Pack Size"
        }
      },
      "required": ["productName", "deviceAndSpecificDeviceType", "packSize"],
      "errorMessage": {
        "required": "Product Details must be populated."
      }
    }

  },
  "properties": {
    "productName": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Brand Name",
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Brand Name must be populated."
      }
    },
    "containerType": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Container Type",
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Container Type must be populated."
      }
    },
    "containedProducts": {
      "type": "array",
      "title": "Contained Products",
      "items": {
        "$ref": "#/$defs/ProductDetails"
      }
    }
  },
  "required": ["productName", "containerType","containedProducts"],
  "errorMessage": {
    "required": "Fields must be populated."
  },
  "additionalProperties": false
}
