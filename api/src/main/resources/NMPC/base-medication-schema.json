{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$defs": {
    "SnowstormConceptMini": {
      "type": "object",
      "properties": {
        "conceptId": { "type": "string" },
        "pt": { "$ref": "#/$defs/SnowstormTermLangPojo" },
        "fsn": { "$ref": "#/$defs/SnowstormTermLangPojo" }
      },
      "minProperties": 1
    },
    "SnowstormTermLangPojo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lang": { "type": "string" },
        "term": { "type": "string" }
      },
      "required": ["lang", "term"]
    },
    "UnitValueConstraint": {
      "dependencies": {
        "unit": {
          "oneOf": [
            {
              "properties": {
                "unit": {
                  "properties": { "conceptId": { "const": "732935002" } }
                },
                "value": { "type": "integer", "minimum": 1 }
              },
              "required": ["value"]
            },
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": { "not": { "const": "732935002" } }
                  }
                },
                "value": { "type": "number", "minimum": 0 }
              }
            }
          ]
        }
      }
    },
    "Quantity": {
      "type": "object",
      "nullable": true,
      "minProperties": 2,
      "properties": {
        "unit": {
          "type": ["object", "null"],
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "value": { "type": "number", "minimum": 0 }
      },
      "allOf": [{ "$ref": "#/$defs/UnitValueConstraint" }]
    },
    "BaseIngredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "activeIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "VTM Active Ingredient"
        },
        "refinedActiveIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "VMP Active Ingredient"
        },
        "preciseIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "AMP Active Ingredient"
        }
      },
      "required": ["activeIngredient"]
    },
    "PresentationStrengthIngredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "activeIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "VTM Active Ingredient"
        },
        "refinedActiveIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "VMP Active Ingredient"
        },
        "preciseIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "AMP Active Ingredient"
        },
        "basisOfStrengthSubstance": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Basis of Strength Substance"
        },
        "presentationStrengthNumerator": {
          "$ref": "#/$defs/Quantity",
          "title": "Presentation Strength Numerator"
        },
        "presentationStrengthDenominator": {
          "$ref": "#/$defs/Quantity",
          "title": "Presentation Strength Denominator"
        }
      },
      "required": ["activeIngredient","refinedActiveIngredient","basisOfStrengthSubstance", "presentationStrengthNumerator"]
    },
    "ConcentrationStrengthIngredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "activeIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "VTM Active Ingredient"
        },
        "refinedActiveIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "VMP Active Ingredient"
        },
        "preciseIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "AMP Active Ingredient"
        },
        "basisOfStrengthSubstance": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Basis of Strength Substance"
        },
        "concentrationStrengthNumerator": {
          "$ref": "#/$defs/Quantity",
          "title": "Concentration Strength Numerator"
        },
        "concentrationStrengthDenominator": {
          "$ref": "#/$defs/Quantity",
          "title": "Concentration Strength Denominator"
        }
      },
      "required": [
        "activeIngredient","refinedActiveIngredient","basisOfStrengthSubstance",
        "basisOfStrengthSubstance",
        "concentrationStrengthNumerator",
        "concentrationStrengthDenominator"
      ]
    },
    "NoStrengthIngredient": { "$ref": "#/$defs/BaseIngredient" },
    "ProductDetails": {
      "type": "object",
      "discriminator": {
        "propertyName": "productType"
      },
      "oneOf": [
        {
          "title": "Presentation Strength",
          "properties": {
            "productName": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Brand Name"
            },
            "genericForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Generic Dose Form"
            },
            "specificForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Specific Dose Form"
            },
            "productType": { "const": "presentationStrength" },
            "type": { "type": "string", "default": "medication" },
            "activeIngredients": {
              "type": "array",
              "title": "Presentation Strength Ingredients",
              "items": { "$ref": "#/$defs/PresentationStrengthIngredient" },
              "minItems": 1
            },
            "unitOfPresentation": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Unit of Presentation"
            },
            "nonDefiningProperties": {
              "title": "Non Defining Properties",
              "type": "array",
              "items": {
                "$ref": "#/$defs/MEDICATION_PRODUCT_NonDefiningProperty"
              }
            }
          },
          "required": [
            "productName",
            "genericForm",
            "productType",
            "activeIngredients",
            "unitOfPresentation"
          ],
          "additionalProperties": false
        },
        {
          "title": "Concentration Strength",
          "properties": {
            "productName": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Brand Name"
            },
            "genericForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Generic Dose Form"
            },
            "specificForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Specific Dose Form"
            },
            "productType": { "const": "concentrationStrength" },
            "type": { "type": "string", "default": "medication" },
            "activeIngredients": {
              "type": "array",
              "title": "Concentration Strength Ingredients",
              "items": { "$ref": "#/$defs/ConcentrationStrengthIngredient" },
              "minItems": 1
            },"nonDefiningProperties": {
              "title": "Non Defining Properties",
              "type": "array",
              "items": {
                "$ref": "#/$defs/MEDICATION_PRODUCT_NonDefiningProperty"
              }
            }
          },
          "required": [
            "productName",
            "genericForm",
            "productType",
            "activeIngredients"
          ],
          "additionalProperties": false
        },
        {
          "title": "No Strength",
          "properties": {
            "productName": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Brand Name"
            },
            "genericForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Generic Dose Form"
            },
            "specificForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Specific Dose Form"
            },
            "productType": { "const": "noStrength" },
            "type": { "type": "string", "default": "medication" },
            "activeIngredients": {
              "type": "array",
              "title": "No Strength Ingredients",
              "items": { "$ref": "#/$defs/NoStrengthIngredient" },
              "minItems": 1
            },
            "unitOfPresentation": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Unit of Presentation"
            },
            "nonDefiningProperties": {
              "title": "Non Defining Properties",
              "type": "array",
              "items": {
                "$ref": "#/$defs/MEDICATION_PRODUCT_NonDefiningProperty"
              }
            }
          },
          "required": [
            "productName",
            "genericForm",
            "productType",
            "activeIngredients",
            "unitOfPresentation"
          ],
          "additionalProperties": false
        },
        {
          "title": "Vaccine Presentation",
          "properties": {
            "productName": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Brand Name"
            },
            "genericForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Generic Dose Form"
            },
            "specificForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Specific Dose Form"
            },
            "productType": { "const": "vaccinePresentation" },
            "type": { "type": "string", "default": "vaccine" },
            "activeIngredients": {
              "type": "array",
              "title": "Presentation Strength Ingredients",
              "items": { "$ref": "#/$defs/PresentationStrengthIngredient" },
              "minItems": 1
            },
            "targetPopulation": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Target Population"
            },
            "nonDefiningProperties": {
              "title": "Non Defining Properties",
              "type": "array",
              "items": {
                "$ref": "#/$defs/MEDICATION_PRODUCT_NonDefiningProperty"
              }
            }
          },
          "required": [
            "productName",
            "genericForm",
            "productType",
            "activeIngredients"
          ],
          "additionalProperties": false
        },
        {
          "title": "Vaccine Qualitative",
          "properties": {
            "productName": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Brand Name"
            },
            "genericForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Generic Dose Form"
            },
            "specificForm": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Specific Dose Form"
            },
            "productType": { "const": "vaccineQualitative" },
            "type": { "type": "string", "default": "vaccine" },
            "activeIngredients": {
              "type": "array",
              "title": "No Strength Ingredients",
              "items": { "$ref": "#/$defs/NoStrengthIngredient" },
              "minItems": 1
            },
            "targetPopulation": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Target Population"
            },
            "ingredientQualitativeStrength": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Qualitative Strength"
            },
            "nonDefiningProperties": {
              "title": "Non Defining Properties",
              "type": "array",
              "items": {
                "$ref": "#/$defs/MEDICATION_PRODUCT_NonDefiningProperty"
              }
            }
          },
          "required": [
            "productName",
            "genericForm",
            "productType",
            "activeIngredients"
          ],
          "additionalProperties": false
        }
      ]
    },
    "BaseContainer": {
      "type": "object",
      "properties": {
        "unit": { "$ref": "#/$defs/SnowstormConceptMini" },
        "value": { "type": "number", "minimum": 0
        },
        "productDetails": { "$ref": "#/$defs/ProductDetails" }
      },
      "required": ["unit", "value", "productDetails"]
    }
  },
  "properties": {
    "containedProducts": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/BaseContainer" }
    }
  },
  "required": ["containedProducts"],
  "additionalProperties": false
}
