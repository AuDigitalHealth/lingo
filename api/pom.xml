  <profiles>
    <profile>
      <activation>
        <property>
          <name>buildnumber</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <configuration>
                  <target>
                    <echo file="${staticdir}/buildnumber.txt">${buildnumber}</echo>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
                <phase>generate-resources</phase>
              </execution>
            </executions>
            <version>3.1.0</version>
          </plugin>
        </plugins>
      </build>
      <id>azuredevops</id>
      <properties>
        <staticdir>${project.build.directory}/classes/static</staticdir>
      </properties>
    </profile>

    <profile>
      <!-- This profile is used to build the image for the arm64 architecture when on Apple Silicon -->
      <activation>
        <os>
          <arch>aarch64</arch>
        </os>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>jib-maven-plugin</artifactId>
            <configuration>
              <from>
                <image>eclipse-temurin:17</image>
                <platforms>
                  <platform>
                    <architecture>arm64</architecture>
                    <os>linux</os>
                  </platform>
                </platforms>
              </from>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>dockerBuild</goal>
                </goals>
                <phase>package</phase>
              </execution>
            </executions>
            <groupId>com.google.cloud.tools</groupId>
            <version>${jib.version}</version>
          </plugin>
        </plugins>
      </build>
      <id>local</id>
    </profile>

  </profiles>
