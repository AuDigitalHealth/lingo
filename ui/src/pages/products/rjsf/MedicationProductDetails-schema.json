{
  "type": "object",
  "$defs": {
    "Ingredient": {
      "type": "object",
      "properties": {
        "activeAndPreciseIngredients": {
          "type": "object",
          "properties": {
            "activeIngredient": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Has Active Ingredient"
            },
            "preciseIngredient": {
              "$ref": "#/$defs/SnowstormConceptMini"
            }
          },
          "required": ["activeIngredient"]

        },
        "basisOfStrengthSubstance": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "concentrationStrength": {
          "$ref": "#/$defs/Quantity"
        },
        "totalQuantity": {
          "$ref": "#/$defs/Quantity"
        }
      }
    },
    "Map(String,Object)": {
      "type": "object"
    },
    "Quantity": {
      "type": "object",
      "properties": {
        "unit": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "value": {
          "type": "number"
        }
      },
      "required": ["unit", "value"],
      "dependencies": {
        "unit": {
          "oneOf": [
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "const": "732935002"
                    }
                  }
                },
                "value": {
                  "type": "integer",
                  "minimum": 1
                }
              }
            },
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "not": {
                        "const": "732935002"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      }
    },
    "SnowstormConceptMini": {
      "type": "object",
      "properties": {
        "conceptId": {
          "type": "string"

        }

      },
      "minProperties": 1
    },
    "ExternalIdentifier": {
      "type": "object",
      "properties": {
        "identifierScheme": {
          "type": "string",
          "title": "Identifier Scheme",
          "default": "https://www.tga.gov.au/artg"
        },
        "identifierValue": {
          "type": "string",
          "title": "Identifier Value"
        }
      }
    }
  },
  "properties": {
    "productName": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Brand Name",
      "minProperties": 1

    },
    "containerType": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Container Type",
      "minProperties": 1

    },
    "externalIdentifiers": {
      "type": "array",
      "title": "External Identifiers",
      "items": {
        "$ref": "#/$defs/ExternalIdentifier"
      }
    },
    "containedProducts": {
      "type": "array",
      "title": "Contained Products",
      "items": {
        "type": "object",
        "properties": {
          "productDetails": {
            "type": "object",
            "title": "Product Details",
            "properties": {
              "productName": {
                "$ref": "#/$defs/SnowstormConceptMini",
                "title": "Product Name",
                "minProperties": 1
              },
              "activeIngredients": {
                "type": "array",
                "title": "Active Ingredients",
                "items": {
                  "$ref": "#/$defs/Ingredient"
                }
              },
              "genericAndSpecificForms": {
                "type": "object",
                "properties": {
                  "genericForm": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Generic Dose Form"
                  },
                  "specificForm": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Specific Dose Form"
                  }
                },
                "title": "Generic and Specific Forms"
              },
              "containerOrDeviceType": {
                "type": "object",
                "title": "Package Type",
                "properties": {
                  "containerType": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Container Type"
                  },
                  "deviceType": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Device Type"
                  }
                }
              },
              "packSize": {
                "$ref": "#/$defs/Quantity"
              },
              "otherIdentifyingInformation": {
                "type": "string",
                "title": "Other Identifying Information"
              }
            },
            "required": ["productName", "activeIngredients", "packSize"],
            "not": {
              "allOf": [
                {
                  "properties": {
                    "genericAndSpecificForms": {
                      "properties": {
                        "genericForm": { "type": "null" }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "containerOrDeviceType": {
                      "properties": {
                        "containerType": { "type": "null" },
                        "deviceType": { "type": "null" }
                      }
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }


  },
  "required": ["productName","containerType"],
  "additionalProperties": false
}
