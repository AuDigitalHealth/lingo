{
  "type": "object",
  "$defs": {
    "Ingredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "activeAndPreciseIngredients": {
          "type": "object",
          "title": "",
          "additionalProperties": false,
          "properties": {
            "activeIngredient": {
              "$ref": "#/$defs/SnowstormConceptMini",
              "title": "Has Active Ingredient",
              "errorMessage": {
                "minProperties": "Active Ingredient must be populated."
              }
            },
            "preciseIngredient": {
              "$ref": "#/$defs/SnowstormConceptMini"
            }
          },
          "required": ["activeIngredient"],
          "errorMessage": {
            "required": "Active Ingredient must be populated."
          }
        },
        "basisOfStrengthSubstance": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "concentrationStrength": {
          "$ref": "#/$defs/Quantity",
          "title": "Concentration Strength"
        },
        "totalQuantity": {
          "$ref": "#/$defs/Quantity"
        }
      }
    },
    "Map(String,Object)": {
      "type": "object"
    },
    "Quantity": {
      "type": "object",
      "properties": {
        "unit": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "value": {
          "type": "number",
          "minimum": 0
        }
      },
      "minProperties": 2,
      "errorMessage": {
        "minProperties": "Both 'unit' and 'value' must be provided together."
      },
      "dependencies": {
        "unit": {
          "oneOf": [
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "const": "732935002"
                    }
                  }
                },
                "value": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": ["value"]
            },
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "not": {
                        "const": "732935002"
                      }
                    }
                  }
                }

              }
            }
          ],
          "errorMessage": {
            "oneOf": "Must be an integer â‰¥ 1 when 'unit' is 'Each'"
          }
        }
      }
    },


    "SnowstormConceptMini": {
      "type": "object",
      "properties": {
        "conceptId": {
          "type": "string"
        },
        "pt": {
          "$ref": "#/$defs/SnowstormTermLangPojo"
        }
      },
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Field must be populated."
      }
    },
    "SnowstormTermLangPojo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lang": {
          "type": "string"
        },
        "term": {
          "type": "string"
        }
      }
    },
    "ExternalIdentifier": {
      "type": "object",
      "properties": {
        "identifierScheme": {
          "type": "string",
          "title": "Identifier Scheme",
          "default": "https://www.tga.gov.au/artg"
        },
        "identifierValue": {
          "type": "string",
          "title": "Identifier Value"
        }
      }
    }
  },
  "properties": {
    "productName": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Brand Name",
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Brand Name must be populated."
      }
    },
    "containerType": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Container Type",
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Container Type must be populated."
      }
    },
    "externalIdentifiers": {
      "type": "array",
      "title": "External Identifiers",
      "items": {
        "$ref": "#/$defs/ExternalIdentifier"
      }
    },
    "containedProducts": {
      "type": "array",
      "title": "Contained Products",
      "items": {
        "type": "object",
        "properties": {
          "productDetails": {
            "type": "object",
            "title": "Product Details",
            "properties": {
              "productName": {
                "$ref": "#/$defs/SnowstormConceptMini",
                "title": "Product Name",
                "minProperties": 1,
                "errorMessage": {
                  "minProperties": "Product Name must be populated."
                }
              },
              "activeIngredients": {
                "type": "array",
                "title": "Active Ingredients",
                "items": {
                  "$ref": "#/$defs/Ingredient"
                }
              },
              "genericAndSpecificForms": {
                "type": "object",
                "properties": {
                  "genericForm": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Generic Dose Form"
                  },
                  "specificForm": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Specific Dose Form"
                  }
                },
                "title": "Generic and Specific Forms"
              },
              "quantity": {
                "$ref": "#/$defs/Quantity" ,
                "title": "Unit Size"
              },
              "containerOrDeviceType": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "containerType": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Container Type"
                  },
                  "deviceType": {
                    "anyOf": [
                      { "$ref": "#/$defs/SnowstormConceptMini" },
                      { "type": "null" }
                    ],
                    "title": "Device Type"
                  }
                }
              },
              "packSize": {
                "$ref": "#/$defs/Quantity",
                "minProperties": 2,
                "errorMessage": {
                  "minProperties": "Invalid Pack size"
                },
                "title": "Pack Size"
              },

              "otherIdentifyingInformation": {
                "type": "string",
                "title": "Other Identifying Information"
              }
            },
            "not": {
              "allOf": [
                {
                  "properties": {
                    "genericAndSpecificForms": {
                      "properties": {
                        "genericForm": { "type": "null" }
                      }
                    }
                  }
                },
                {
                  "properties": {
                    "containerOrDeviceType": {
                      "properties": {
                        "containerType": { "type": "null" },
                        "deviceType": { "type": "null" }
                      }
                    }
                  }
                }
              ]

            },
            "required": ["productName", "activeIngredients", "packSize","genericAndSpecificForms", "containerOrDeviceType"],
            "errorMessage": {
              "required": "Product Details must be populated.",
              "not": "You must provide either a Generic Form or Container/Device Type. Both cannot be empty."
            }

          }
        }
      }
    }
  },
  "required": ["productName", "containerType"],
  "errorMessage": {
    "required": "Fields must be populated."
  },
  "additionalProperties": false
}