{
  "type": "object",
  "$defs": {
    "SnowstormConceptMini": {
      "type": "object",
      "properties": {
        "conceptId": {
          "type": "string"
        },
        "pt": {
          "$ref": "#/$defs/SnowstormTermLangPojo"
        }
      },
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Field must be populated."
      }
    },
    "SnowstormTermLangPojo": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "lang": {
          "type": "string"
        },
        "term": {
          "type": "string"
        }
      }
    },
    "ExternalIdentifier": {
      "type": "object",
      "oneOf": [
        {
          "title": "ARTG ID",
          "properties": {
            "identifierScheme": {
              "type": "string",
              "const": "artgid"
            },
            "identifierValues": {
              "type": "array",
              "title": "Identifier Values",
              "items": {
                "type": "string",
                "title": "ARTG ID",
                "pattern": "^\\d{3,10}$",
                "errorMessage": {
                  "pattern": "Please enter a valid ARTG ID."
                }
              }
            }
          }
        },
        {
          "title": "GTIN",
          "properties": {
            "identifierScheme": {
              "type": "string",
              "const": "gtin"
            },
            "identifierValue": {
              "type": "string",
              "title": "GTIN",
              "pattern": "^\\d{8}(\\d{4}(\\d{1,2})?)?$",
              "errorMessage": {
                "pattern": "Please enter a valid GTIN."
              }
            },
            "relationshipType": {
              "type": "string",
              "enum": ["related", "narrower", "broader"],
              "default": "related"
            }
          }
        }
      ]
    },
    "Quantity": {
      "type": "object",
      "properties": {
        "unit": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "value": {
          "type": "number",
          "minimum": 0
        }
      },
      "minProperties": 2,
      "errorMessage": {
        "minProperties": "Both 'unit' and 'value' must be provided."
      },
      "dependencies": {
        "unit": {
          "oneOf": [
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "const": "732935002"
                    }
                  }
                },
                "value": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "required": ["value"]
            },
            {
              "properties": {
                "unit": {
                  "properties": {
                    "conceptId": {
                      "not": {
                        "const": "732935002"
                      }
                    }
                  }
                }
              }
            }
          ],
          "errorMessage": {
            "oneOf": "Must be an integer â‰¥ 1 when 'unit' is 'Each'"
          }
        }
      }
    },
    "ActiveAndPreciseIngredients": {
      "type": "object",
      "title": "Active Ingredient",
      "additionalProperties": false,
      "properties": {
        "activeIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Has Active Ingredient",
          "errorMessage": {
            "minProperties": "Active Ingredient must be populated."
          }
        },
        "preciseIngredient": {
          "$ref": "#/$defs/SnowstormConceptMini"
        }
      },
      "required": ["activeIngredient"],
      "errorMessage": {
        "required": "Active Ingredient must be populated."
      }
    },
    "Ingredient": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "activeAndPreciseIngredients": {
          "$ref": "#/$defs/ActiveAndPreciseIngredients"
        },
        "basisOfStrengthSubstance": {
          "$ref": "#/$defs/SnowstormConceptMini"
        },
        "concentrationStrength": {
          "$ref": "#/$defs/Quantity",
          "title": "Concentration Strength"
        },
        "totalQuantity": {
          "$ref": "#/$defs/Quantity"
        }
      },
      "required": ["activeAndPreciseIngredients"]
    },
    "GenericAndSpecificForms": {
      "type": "object",
      "properties": {
        "genericForm": {
          "anyOf": [
            {
              "$ref": "#/$defs/SnowstormConceptMini"
            },
            {
              "type": "null"
            }
          ],
          "title": "Generic Dose Form"
        },
        "specificForm": {
          "anyOf": [
            {
              "$ref": "#/$defs/SnowstormConceptMini"
            },
            {
              "type": "null"
            }
          ],
          "title": "Specific Dose Form"
        }
      },
      "title": "Generic and Specific Forms"
    },
    "ContainerOrDeviceType": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "containerType": {
          "anyOf": [
            {
              "$ref": "#/$defs/SnowstormConceptMini"
            },
            {
              "type": "null"
            }
          ],
          "title": "Container Type"
        },
        "deviceType": {
          "anyOf": [
            {
              "$ref": "#/$defs/SnowstormConceptMini"
            },
            {
              "type": "null"
            }
          ],
          "title": "Device Type"
        }
      }
    },
    "ProductDetails": {
      "type": "object",
      "title": "Product Details",
      "properties": {
        "productName": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Product Name",
          "minProperties": 1,
          "errorMessage": {
            "minProperties": "Product Name must be populated."
          }
        },
        "activeIngredients": {
          "type": "array",
          "title": "Active Ingredients",
          "items": {
            "$ref": "#/$defs/Ingredient"
          },
          "minItems": 1,
          "errorMessage": {
            "minItems": "At least one active ingredient must be present."
          }
        },
        "genericAndSpecificForms": {
          "$ref": "#/$defs/GenericAndSpecificForms"
        },
        "quantity": {
          "$ref": "#/$defs/Quantity",
          "title": "Unit Size"
        },
        "containerOrDeviceType": {
          "$ref": "#/$defs/ContainerOrDeviceType"
        },
        "packSize": {
          "$ref": "#/$defs/Quantity",
          "title": "Pack Size"
        },
        "otherIdentifyingInformation": {
          "type": "string",
          "title": "Other Identifying Information"
        }
      },
      "required": ["productName", "activeIngredients", "packSize"],
      "errorMessage": {
        "required": "Product Details must be populated."
      },
      "allOf": [
        {
          "not": {
            "properties": {
              "genericAndSpecificForms": {
                "properties": {
                  "genericForm": {
                    "type": "null"
                  }
                }
              },
              "containerOrDeviceType": {
                "properties": {
                  "containerType": {
                    "type": "null"
                  },
                  "deviceType": {
                    "type": "null"
                  }
                }
              }
            },
            "required": ["genericAndSpecificForms", "containerOrDeviceType"]
          },
          "errorMessage": {
            "not": "You must provide either a Generic Form or Container/Device Type. Both cannot be empty."
          }
        }
      ]
    },
    "PackageDetails": {
      "type": "object",
      "title": "Package Details",
      "properties": {
        "productName": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Brand Name",
          "minProperties": 1,
          "errorMessage": {
            "minProperties": "Brand Name must be populated."
          }
        },
        "containerType": {
          "$ref": "#/$defs/SnowstormConceptMini",
          "title": "Container Type",
          "minProperties": 1,
          "errorMessage": {
            "minProperties": "Container Type must be populated."
          }
        },
        "externalIdentifiers": {
          "title": "External Identifiers",
          "type": "array",
          "items": {
            "$ref": "#/$defs/PackageExternalIdentifier"
          }
        },
        "containedProducts": {
          "type": "array",
          "title": "Contained Products",
          "items": {
            "$ref": "#/$defs/ProductDetails"
          }
        },
        "packSize": {
          "$ref": "#/$defs/Quantity",
          "title": "Pack Size"
        }
      },
      "required": [
        "productName",
        "containerType",
        "containedProducts",
        "packSize"
      ],
      "errorMessage": {
        "required": "Fields must be populated."
      }
    },
    "PackageExternalIdentifier": {
      "type": "object",
      "oneOf": [
        {
          "title": "GTIN",
          "type": "object",
          "properties": {
            "identifierScheme": {
              "type": "string",
              "const": "gtin"
            },
            "relationshipType": {
              "title": "Relationship type",
              "type": "string",
              "enum": ["SPECIALISE", "GENERALISE", "EQUIVALENT"]
            },
            "identifierValue": {
              "title": "GTIN",
              "type": "string",
              "pattern": "^\\d{8}(\\d{4}(\\d{1,2})?)?$",
              "errorMessage": {
                "pattern": "Please enter a valid GTIN matching ^\\d{8}(\\d{4}(\\d{1,2})?)?$"
              }
            }
          }
        },
        {
          "title": "ARTGID",
          "type": "object",
          "properties": {
            "identifierScheme": {
              "type": "string",
              "const": "artgid"
            },
            "relationshipType": {
              "title": "Relationship type",
              "type": "string",
              "const": "RELATED"
            },
            "identifierValue": {
              "title": "ARTGID",
              "type": "string",
              "pattern": "\\d{1,8}",
              "errorMessage": {
                "pattern": "Please enter a valid ARTGID matching \\d{1,8}"
              }
            }
          }
        }
      ]
    }
  },
  "properties": {
    "productName": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Brand Name",
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Brand Name must be populated."
      }
    },
    "containerType": {
      "$ref": "#/$defs/SnowstormConceptMini",
      "title": "Container Type",
      "minProperties": 1,
      "errorMessage": {
        "minProperties": "Container Type must be populated."
      }
    },
    "externalIdentifiers": {
      "title": "External Identifiers",
      "type": "array",
      "items": {
        "$ref": "#/$defs/PackageExternalIdentifier"
      }
    },
    "containedProducts": {
      "type": "array",
      "title": "Contained Products",
      "items": {
        "$ref": "#/$defs/ProductDetails"
      }
    },
    "containedPackages": {
      "type": "array",
      "title": "Contained Packages",
      "items": {
        "$ref": "#/$defs/PackageDetails"
      }
    }
  },
  "required": ["productName", "containerType"],
  "errorMessage": {
    "required": "Fields must be populated."
  },
  "additionalProperties": false
}
